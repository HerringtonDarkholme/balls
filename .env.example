# Bash on Balls Configuration
# Copy this file to .env and customize

# Server settings
PORT=3000
HOST=127.0.0.1

# Authentication (optional)
# AUTH_TOKEN=your-secret-token-here
# BASIC_AUTH_USER=admin
# BASIC_AUTH_PASS=password

# Environment
BALLS_ENV=development

# Logging
LOG_LEVEL=info
LOG_FILE=log/access.log

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=300

# Database backend: csv or json (json requires jq)
DB_BACKEND=csv
